{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "paths": {
      "@/*": ["./*"],
      "server/*": ["./server/*"],
      "tamagui": ["./design-system/Primitives.tsx"]
    },
    "types": [
      "./expo-env.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "server/**/*.ts",
    "nativewind-env.d.ts"
  ]
}
